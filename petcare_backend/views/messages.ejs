<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inbox - Messages</title>
  <link rel="stylesheet" href="admin/Index.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link href='https://cdn.boxicons.com/fonts/basic/boxicons.min.css' rel='stylesheet'>
</head>
<body>
  <div class="container">
     <!-- Sidebar -->
     <aside>
      <div class="top">
        <div class="logo">
          <a href="/adminDasboard">
            <h2>PET<span class="danger">CARE</span></h2>
          </a>
        </div>
        <div class="close" id="close-btn">
          <i class='bx bx-x'></i>
        </div>
      </div>

      <div class="sidebar">
        <a href="/adminDasboard">
          <i class='bx bx-dashboard'></i>
          <h3>Dashboard</h3>
        </a>
        <a href="/customers-admin" >
          <i class='bx bx-user-square'></i>
          <h3>Customers</h3>
        </a>
        <a href="/bookings-admin">
          <i class='bx bx-contact-book'></i>
          <h3>Bookings</h3>
        </a>
        <a href="/messages-admin" class="active">
          <i class='bx bx-envelope'></i>
          <h3>Messages</h3>
          <span class="message-count">2</span>
        </a>
        <a href="#">
            <i class=></i>
             <h3></h3>
        </a>
      </div>
    </aside>
    <!-- Main Content -->
    <main>
      <div class="recent-orders">
        <h2>Inbox</h2>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Subject</th>
              <th>Message</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody>
            <% contacts.forEach(contact => { %>
              <tr>
                <td><%= contact.name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.subject %></td>
                <td><%= contact.message %></td>
                <td><%= new Date(contact.createdAt).toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</body>
</html>
