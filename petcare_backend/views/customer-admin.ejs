<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard - Customers</title>
  <link href='https://cdn.boxicons.com/fonts/basic/boxicons.min.css' rel='stylesheet'>
  <link href="admin/Index.css" rel="stylesheet" />
</head>

<body>
  <div class="container">
    <!-- Sidebar -->
    <aside>
      <div class="top">
        <div class="logo">
          <a href="/adminDasboard">
            <h2>PET<span class="danger">CARE</span></h2>
          </a>
        </div>
        <div class="close" id="close-btn">
          <i class='bx bx-x'></i>
        </div>
      </div>

      <div class="sidebar">
        <a href="/adminDasboard">
          <i class='bx bx-dashboard'></i>
          <h3>Dashboard</h3>
        </a>
        <a href="/customers-admin" class="active">
          <i class='bx bx-user-square'></i>
          <h3>Customers</h3>
        </a>
        <a href="/bookings-admin">
          <i class='bx bx-contact-book'></i>
          <h3>Bookings</h3>
        </a>
        <a href="/messages-admin">
          <i class='bx bx-envelope'></i>
          <h3>Messages</h3>
          <span class="message-count">26</span>
        </a>
      </div>
    </aside>

    <!-- Main Content -->
    <main>
      <div class="recent-orders">
        <h2>Customer & Caretaker List</h2>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td style="text-transform: capitalize;"><%= user.role %></td>
                <td>
                  <a href="/edit-user/<%= user._id %>" class="primary btn-edit">Edit</a>
                  <form action="/delete-user/<%= user._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="danger btn-delete" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <a href="#">Show All Customers</a>
      </div>
    </main>
  </div>
</body>

</html>
